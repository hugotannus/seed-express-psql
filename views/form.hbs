<h1>{{title}}</h1>

<form action="">
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input type="text" class="form-control" value="{{aluno.nome}}">
    </div>
    
    <div class="mb-3">
        <label class="form-label">Matrícula</label>
        <input type="text" class="form-control" value="{{aluno.matricula}}">
    </div>

    <div class="mb-3">
        <label class="form-label">Data de Nascimento</label>
        <input type="text" class="form-control" value="{{aluno.data_nascimento}}">
    </div>

    <div class="mb-3">
        <label class="form-label">Endereço de E-mail</label>
        <input type="text" class="form-control" value="{{aluno.email}}">
    </div>

    <input type="submit" name="submit" id="submit" value="{{buttonText}}">
</form>