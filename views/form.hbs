<h1>{{title}}</h1>
{{!-- POST ==> action="/alunos/create" --}}
{{!--  PUT ==> action="/alunos/123456" --}}
<form action="/alunos/{{parametro}}" method="POST">
    <input type="hidden" name="_method" value="{{metodo}}">
    
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input type="text" name="nome" class="form-control" value="{{aluno.nome}}">
    </div>
    
    <div class="mb-3">
        <label class="form-label">Matrícula</label>
        <input type="text" name="matricula" class="form-control" value="{{aluno.matricula}}">
    </div>

    <div class="mb-3">
        <label class="form-label">Data de Nascimento</label>
        <input type="text" name="data_nascimento" class="form-control" value="{{aluno.data_nascimento}}">
    </div>

    <div class="mb-3">
        <label class="form-label">Endereço de E-mail</label>
        <input type="text" name="email" class="form-control" value="{{aluno.email}}">
    </div>

    <input type="submit" id="submit" value="{{buttonText}}">
</form>